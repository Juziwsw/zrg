<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/lin_up"
        android:layout_width="247dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_bg_garden_header"/>
        <ImageView
            android:id="@+id/iv_create_garden"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@android:color/transparent"/>
        <ImageView
            android:id="@+id/iv_search_garden"
            android:layout_width="123dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@android:color/transparent"/>
        <Button
            android:id="@+id/btn_create_garden"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:background="@drawable/ic_btn_new_garden" />
        <Button
            android:id="@+id/btn_search_garden"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:background="@drawable/ic_btn_search_garden" />
    </RelativeLayout>
</LinearLayout>
