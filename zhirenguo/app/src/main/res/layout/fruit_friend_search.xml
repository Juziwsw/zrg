<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp" >
        <ImageView
            android:id="@+id/iv_gf_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_gf_back"/>
        <RelativeLayout
            android:id="@+id/rel_gf_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gf_back"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edt_friend_num"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_gf_input"
                android:singleLine="true"
                android:textColor="@color/colorecba78"
                android:textColorHint="@color/colorecba78"
                android:textSize="12sp"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:hint="果友ID/果友名称"
                />
            <Button
                android:id="@+id/btn_friend_search"
                android:layout_width="52dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_btn_gf_search"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/list_search_friend"
            android:layout_below="@+id/rel_gf_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
