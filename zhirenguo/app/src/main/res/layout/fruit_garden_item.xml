<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_default_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_bg_garden_normal"/>
            <ImageView
                android:id="@+id/iv_garden_screen"
                android:layout_width="274dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_bg_garden_me"/>
            <ImageView
                android:id="@+id/iv_garden_go"
                android:layout_width="240dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"/>
            <ImageView
                android:id="@+id/iv_default_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10.5dp"
                android:background="@drawable/ic_bg_garden_flag"
                android:visibility="invisible"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_garden_center"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_btn_garden_center">
            <TextView
                android:id="@+id/tv_garden_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:text="世外桃源"/>
            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_garden_title"
                android:layout_gravity="center_vertical"
                android:textColor="#ff0000"
                android:text="20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_garden_title"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:text="人"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_garden_invite"
            android:layout_width="85dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:padding="0dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/ic_btn_invite_friend"/>
    </RelativeLayout>
</LinearLayout>
