<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_bg_big">
            <RelativeLayout
                android:id="@+id/layout_sysacount_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果币收支"
                    android:textSize="24sp"
                    android:textColor="@color/color61281d"
                    android:layout_centerInParent="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/img_sysacount_colse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="240dp"
                        android:src="@drawable/ic_email_close"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/layout_sysacount_01"
                android:layout_centerHorizontal="true"
                android:layout_width="245dp"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/list_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:fadingEdge="none"
                    android:listSelector="@android:color/transparent"
                    android:transcriptMode="normal"
                    android:divider="#00000000"
                    android:dividerHeight="5dp"
                    android:scrollbars="none">
                </ListView>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_bg_top_vine"/>
    </RelativeLayout>
</LinearLayout>

